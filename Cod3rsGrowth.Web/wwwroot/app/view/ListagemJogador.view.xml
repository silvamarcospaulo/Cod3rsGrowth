<mvc:View
	controllerName="mtgdeckbuilder.app.controller.ListagemJogador"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				paste="onPaste"
				ariaLabelledBy="title"
				title="{i18n>App}">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="{i18n>ListagemJogador.Titulo}" />
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column class="autoResize">
						<m:Label text="{i18n>ListagemJogador.Coluna.Username}" />
						<template>
							<m:Text text="{UsuarioJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.Nome}" />
						<template>
							<m:Text text="{NomeJogador} + {SobrenomeJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.ContaAtiva}" />
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>