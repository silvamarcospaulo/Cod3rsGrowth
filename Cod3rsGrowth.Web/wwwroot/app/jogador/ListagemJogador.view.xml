<mvc:View
	controllerName="mtgdeckbuilder.app.jogador.ListagemJogador"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				paste="onPaste"
				ariaLabelledBy="title"
				title="{i18n>App}">

				<columns>
					<Column class="autoResize">
						<m:Label text="{i18n>ListagemJogador.Coluna.Username}" />
						<template>
							<m:Text text="{UsuarioJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.Nome}" />
						<template>
							<m:Text text="{NomeJogador} + {SobrenomeJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.ContaAtiva}" />
						<template>
							<m:Text text="{Name}" wrapping="false" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer/>
				<m:Button text="{i18n>Approve}" press="onPress" type="Accept"/>
				<m:Button text="Reject" press="onPress" type="Reject"/>

				<m:Button text="Mark as Favorite" press="onPress" visible="{range>/isNoPhone}"/>

				<m:Button text="Send Email" press="onPress" visible="{range>/isNoPhone}"/>

				<m:Button text="Share" press="onPress" visible="{range>/isNoPhone}"/>

				<m:Button text="Print" press="onPress" visible="{range>/isNotPhoneOrTablet}"/>
				<m:Button icon="sap-icon://print" press="onPress" visible="{range>/isTablet}"/>

				<m:Button text="Export as Excel" press="onPress" visible="{range>/isNotPhoneOrTablet}"/>

				<m:Button icon="sap-icon://overflow" press="onOpen" visible="{range>/isPhoneOrTablet}"/>
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>