<mvc:View
	controllerName="mtgdeckbuilder.app.jogador.ListagemJogador"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{Jogador>/}"
				title="{i18n>App}"
				id="table"
				editable="false"
				enableSelectAll="false"
				selectionMode="Single"
				selectionBehavior="RowOnly"
				>
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title text="Jogadores" />
						<m:ToolbarSpacer />
						<m:SearchField
							placeholder="Nome de usuÃ¡rio"
							value="{ui>/globalFilter}"
							search="filterGlobally"
							width="25em"/>
						<m:ToggleButton
							icon="sap-icon://filter"
							tooltip="Enable / Disable Cell Filter"
							pressed="{ui>/enableCellFilter}" visible="true"/>
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all filters"
							press="clearAllFilters" />
						<m:SearchField
							id="buscaNomeJogador"
							placeholder="Nome do jogador"
							enableSuggestions="true"
							value="{ui>/globalFilter}"
							search="filterGlobally"
							width="25em"/>
						<m:ToolbarSeparator />
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.Username}" />
						<template>
							<m:Text text="{Jogador>usuarioJogador}" wrapping="false" />
						</template>
					</Column>
					<Column class="autoResize">
						<m:Label text="{i18n>ListagemJogador.Coluna.Nome}" />
						<template>
							<m:Text text="{Jogador>nomeJogador} {Jogador>sobrenomeJogador}" wrapping="false" />
						</template>
					</Column>
					<Column class="autoResize">	
						<m:Label text="{i18n>ListagemJogador.Coluna.ContaAtiva}" />
						<template>
							<m:Text text="{Jogador>contaAtivaJogador}" wrapping="false" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer />
				<m:Button text="{i18n>ListagemJogador.Toolbar.BotaoAdicionar}" press="onPress"
					type="Ghost" />
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>