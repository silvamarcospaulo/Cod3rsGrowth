<mvc:View
	controllerName="mtgdeckbuilder.app.jogador.ListagemJogador"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<Table
				rows="{Jogadores>/}"
				selectionMode="MultiToggle"
				paste="onPaste"
				title="{i18n>App}"
				id="table"
				showColumnVisibilityMenu="{ui>/showVisibilityMenuEntry}"
				enableColumnFreeze="{ui>/showFreezeMenuEntry}"
				enableCellFilter="{ui>/enableCellFilter}"
				columnSelect="onColumnSelect"
				cellContextmenu="onProductIdCellContextMenu"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="Jogadores" />
						<m:ToolbarSpacer />
						<m:SearchField
							placeholder="Filter"
							value="{ui>/globalFilter}"
							search="filterGlobally"
							width="auto" />
						<m:ToggleButton
							icon="sap-icon://filter"
							tooltip="Enable / Disable Cell Filter"
							pressed="{ui>/enableCellFilter}" />
						<m:Button
							icon="sap-icon://decline"
							tooltip="Clear all filters"
							press="clearAllFilters" />
						<m:ToolbarSeparator />
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column class="autoResize">
						<m:Label text="{i18n>ListagemJogador.Coluna.Username}" />
						<template>
							<m:Text text="{Jogadores>usuarioJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.Nome}" />
						<template>
							<m:Text text="{Jogadores>nomeJogador} {Jogadores>sobrenomeJogador}" wrapping="false" />
						</template>
					</Column>
					<Column>
						<m:Label text="{i18n>ListagemJogador.Coluna.ContaAtiva}" />
						<template>
							<m:Text text="{Jogadores>contaAtivaJogador}" wrapping="false" />
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
		<m:footer>
			<m:Toolbar>
				<m:ToolbarSpacer />
				<m:Button text="{i18n>ListagemJogador.Toolbar.BotaoAdicionar}" press="onPress"
					type="Ghost" />
				<m:Button text="{i18n>ListagemJogador.Toolbar.BotaoEditar}" press="onPress"
					type="Ghost" />
				<m:Button text="{i18n>ListagemJogador.Toolbar.BotaoExcluir}" press="onPress"
					type="Ghost" />
				<m:Button text="{i18n>ListagemJogador.Toolbar.BotaoDetalhes}" press="onPress"
					type="Ghost" />
			</m:Toolbar>
		</m:footer>
	</m:Page>
</mvc:View>